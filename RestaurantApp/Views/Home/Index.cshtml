@model Tuple<IEnumerable<SelectListItem>, IEnumerable<SelectListItem>, IEnumerable<SelectListItem>> 
@{
    ViewBag.Title = "Home Page";
}

<style>

    fieldset {
        padding-top: 25px;
        border: 1px solid #ddd;
        margin: 0;
        min-width: 20em;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
    }

    legend {    
        font-size: 15px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #fff;
    }

</style>

 <fieldset>
     <legend>
         Restaurant 
     </legend>
     <div class="container">
         <div class="row">

             <div class="col-md-8">

                 <div class="form-group">
                     Customer :
                     @Html.DropDownList(name: "Customer", new SelectList(Model.Item1, dataValueField: "Value", dataTextField: "Text"),
                     htmlAttributes: new { @class = "form-control" })
                 </div>
                
             </div>
             <div class="col-md-4">               

                 <div class="form-group">
                     Payment Types :
                     @Html.DropDownList(name: "PaymentTypes", new SelectList(Model.Item3, dataValueField: "Value", dataTextField: "Text"),
                     htmlAttributes: new { @class = "form-control" })
                 </div>

             </div>


         </div> 
     </div>

 </fieldset>
<fieldset>
    <legend>Restaurant Items</legend>
    <div class="container">
        <div class="row">

            <div class="col-md-4">
                <div class="form-group">
                    Item :
                    @Html.DropDownList(name: "Item", new SelectList(Model.Item2, dataValueField: "Value", dataTextField: "Text"),
                    htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    Unit Price :
                    <input type="text" style="text-align:right" readonly="readonly" id="unitprice" value="0.0" name="Unit Price" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    Quantity :
                    <input type="text" style="text-align:right" id="quantity" value="0.0" name="Quantity" class="form-control" />
                </div>
            </div>

        </div>
        <div class="row">


            <div class="col-md-4">
                <div class="form-group">
                    Discount :
                    <input type="text" style="text-align:right" id="discount" value="0.0" name="Discount" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    Total :
                    <input type="text" style="text-align:right" readonly="readonly" id="total" value="0.0" name="Total" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="button" style="margin-top:20px" id="addlist" name="AddToList" value="Add To List" class="btn btn-success">
                </div>
            </div>

        </div>

    </div>
    
</fieldset>